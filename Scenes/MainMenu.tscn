resource_name = "MainMenu"
script/source = "extends \"res://Scripts/Menu.gd\"

func menu_select(id: int) -> void:
	match id:
		0: # New Game
			main_menu.change_scene(preload(\"res://Scenes/Boards/BaseBoard.tscn\"))
		1: # Pass word game
			main_menu.change_scene(preload(\"res://Scenes/PassWordGame.tscn\"))
		2: # Settings
			main_menu.set_menu($\"../Settings\")
		3: # Exit
			get_tree().paused = true
			
			Global.music_fade_out()
			Global.fade_out()
			await Global.fade_end
			
			await get_tree().create_timer(0.25).timeout
			
			get_tree().quit()
"

